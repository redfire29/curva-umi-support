---
import "../assets/css/main.css";
import AppHeader from "../components/AppHeader.svelte";
import AppFooter from "../components/AppFooter.svelte";
import ja from "../locales/ja.yml";
import zh from "../locales/zh.yml";

interface Props {
    title?: string;
    description?: string;
    frontmatter?: { title?: string; description?: string }; // Fallback if using markdown layout
}

const { currentLocale } = Astro;
const locale = currentLocale || "ja";
const messages = locale === "ja" ? ja : zh;

const { title, description } = Astro.props;
const displayTitle = title || Astro.props.frontmatter?.title || "Home";
const displayDescription =
    description ||
    Astro.props.frontmatter?.description ||
    "來羽うみ (Curva Umi) 非官方應援網站 - 這裡整理了來羽うみ的個人資料、歌唱清單、以及粉絲創作等資訊。Covering Curva Umi's profile, song list, and fan works.";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL(
    "/curva-umi-support/og-image.jpeg",
    Astro.site,
).toString();
---

<!doctype html>
<html lang={locale}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/curva-umi-support/favicon.svg"
        />
        <link
            rel="icon"
            type="image/png"
            href="/curva-umi-support/favicon-96x96.png"
            sizes="96x96"
        />
        <link rel="shortcut icon" href="/curva-umi-support/favicon.ico" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/curva-umi-support/apple-touch-icon.png"
        />
        <link rel="manifest" href="/curva-umi-support/site.webmanifest" />
        <link rel="canonical" href={canonicalURL} />
        <meta name="generator" content={Astro.generator} />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta
            name="keywords"
            content="來羽うみSupport,curva-umi-support,curva umi support,來羽うみ,Curva Umi"
        />
        <meta name="description" content={displayDescription} />

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta
            property="og:title"
            content={`${displayTitle} - 來羽うみSupport`}
        />
        <meta property="og:description" content={displayDescription} />
        <meta property="og:image" content={ogImage} />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta
            name="twitter:title"
            content={`${displayTitle} - 來羽うみSupport`}
        />
        <meta name="twitter:description" content={displayDescription} />
        <meta name="twitter:image" content={ogImage} />

        <title>{displayTitle} - 來羽うみSupport</title>
        <slot name="head" />
    </head>
    <body class="flex flex-col h-full text-pearl-white min-h-screen">
        <AppHeader client:load locale={locale} messages={messages} />
        <div class="flex-1 flex flex-col">
            <div class="w-full mx-auto flex-1 h-full">
                <slot />
            </div>
        </div>
        <AppFooter client:visible locale={locale} messages={messages} />

        <script>
            import AOS from "aos";
            import "aos/dist/aos.css";
            AOS.init({ once: true });
        </script>
    </body>
</html>
